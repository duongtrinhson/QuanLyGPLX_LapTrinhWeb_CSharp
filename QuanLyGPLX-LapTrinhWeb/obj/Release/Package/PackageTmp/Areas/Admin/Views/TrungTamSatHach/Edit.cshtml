@model QuanLyGPLX_LapTrinhWeb.Models.TrungTamSatHach

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (Session["username"] == null)
{
    Response.Redirect("/Home/Login");
}

<h2>Chỉnh sửa trung tâm sát hạch</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label>Mã trung tâm</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaTT, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.MaTT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Tên trung tâm</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenTT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenTT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <a class="btn btn-outline-dark" href="@Url.Action("DanhSachTrungTam", "TrungTamSatHach")"><i class="fa-solid fa-arrow-left"></i> Back</a>
</div>
