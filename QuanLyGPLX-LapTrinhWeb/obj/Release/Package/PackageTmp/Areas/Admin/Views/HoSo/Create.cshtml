@model QuanLyGPLX_LapTrinhWeb.Models.HoSoGPLX

@{
    ViewBag.Title = "Thêm hồ sơ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section create{
    <script src="~/Scripts/Scripts.js"></script>
}

@if (Session["username"] == null)
{
    Response.Redirect("/Home/Login");
}

<h2>Thêm mới hồ sơ giấy phép lái xe</h2>

@using (Html.BeginForm())
{
    <div class="container px-4 mt-4">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-xl-4">
                <div class="card mb-4 mb-xl-0">
                    <div class="card-header">Hình ảnh hồ sơ</div>
                    <div class="card-body text-center">
                        <img class="mb-2" id="pictureUpload" alt="Hình" style="width: 45%;">
                        <div class="small font-italic text-muted mb-4"></div>
                        <input type="text" id="HinhAnh" name="HinhAnh" hidden />
                        <input type="file" name="fileUpload" id="fileUpload" accept="image/*" hidden />
                        <input type="button" id="btnUpload" value="Tải ảnh lên" class="btn btn-primary" />
                    </div>
                </div>
            </div>
            <div class="col-xl-8">
                <div class="card mb-4">
                    <div class="card-header">Thông tin</div>
                    <div class="card-body">
                        <form>
                            <div class="row">
                                <div class="col-md-6 gx-3 mb-3">
                                    <label for="SoCCCD" class="form-label small mb-1">Số CCCD</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.SoCCCD, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.SoCCCD, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-6 gx-3 mb-3">
                                    <label for="SoCCCD" class="form-label small mb-1">Mã giấy phép lái xe</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.MaGPLX, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.MaGPLX, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 gx-3 mb-3">
                                    <label for="SoCCCD" class="form-label small mb-1">Hạng</label>
                                    <div class="col-md-10">
                                        @Html.DropDownList("MaHang", ViewBag.HangGPLX as SelectList, "----Select----", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.MaHang, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-6 gx-3 mb-3">
                                    <label for="SoCCCD" class="form-label small mb-1">Trung tâm sát hạch</label>
                                    <div class="col-md-10">
                                        @Html.DropDownList("TenTT", ViewBag.TenTTSH as SelectList, "----Select----", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.MaTT, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 gx-3 mb-3">
                                    <label for="SoCCCD" class="form-label small mb-1">Ngày cấp</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.NgayCapGPLX, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.NgayCapGPLX, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-6 gx-3 mb-3">
                                    <label for="SoCCCD" class="form-label small mb-1">Ngày hết hạn</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.NgayHetHanGPLX, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.NgayHetHanGPLX, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 gx-3 mb-3">
                                    <label for="SoCCCD" class="form-label small mb-1">Điểm lý thuyết</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.DiemLT, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.DiemLT, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-6 gx-3 mb-3">
                                    <label for="SoCCCD" class="form-label small mb-1">Điểm thực hành</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.DiemTH, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.DiemTH, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 gx-3 mb-3">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Create" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    <a class="btn btn-outline-dark" href="@Url.Action("DanhSachHoSo", "HoSo")"><i class="fa-solid fa-arrow-left"></i> Back</a>
</div>
