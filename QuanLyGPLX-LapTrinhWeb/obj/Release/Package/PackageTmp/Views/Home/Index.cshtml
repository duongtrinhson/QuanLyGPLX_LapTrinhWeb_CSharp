        <div id="main">
            <div id="module-4" class="content">
                <div class="container">
                    <div id="module-5" class="search-driving-license">
                        <h2 class="search-heading">Tra cứu thông tin phép lái xe</h2>
                        <div class="search-row">
                            <label class="label col-left">Số GPLX:</label>
                            <input class="form-control col-right" type="text" id="MaGPLX" name="MaGPLX" placeholder="Nhập số giấy phép lái xe" style="display:inline-block">
                        </div>
                        <div class="search-row">
                            <label class="label col-left">Hạng GPLX:</label>
                            <select class="form-control col-right" id="HangGPLX" name="HangGPLX" style="display:inline-block">
                                <option>----Select----</option>
                                @foreach (var item in ViewBag.HangGPLX)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                        </div>
                        <button type="button" class="btn-send-contact" id="btnTraCuu" value="Tra cứu" name="submit">Tra cứu</button>
                    </div>
                </div>
            </div>
