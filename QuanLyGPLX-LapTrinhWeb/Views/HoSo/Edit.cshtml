@model QuanLyGPLX_LapTrinhWeb.Models.HoSoGPLX

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
<div>
    <h4>Hồ sơ GPLX</h4>
    <hr />
    @using (Html.BeginForm())
    {
        <div class="container-xl px-4 mt-4">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaGPLX)
            <div class="row">
                <div class="col-xl-4">
                    <div class="card mb-4 mb-xl-0">
                        <div class="card-header">Profile Picture</div>
                        <div class="card-body text-center">
                            <img class="mb-2" src="@ViewBag.HinhAnh" alt="Hình" style="width: 45%;">
                            <div class="small font-italic text-muted mb-4">Dung lượng ảnh không quá 5 MB</div>
                            <button class="btn btn-primary" type="button">Tải ảnh lên</button>
                        </div>
                    </div>
                </div>
                <div class="col-xl-8">
                    <div class="card mb-4">
                        <div class="card-header">Account Details</div>
                        <div class="card-body">
                            <form>
                                <div class="row">
                                    <div class="col-md-6 gx-3 mb-3">
                                        <label class="small mb-1">@Html.DisplayNameFor(model => model.MaHang)</label>
                                        @Html.DropDownList("MaHang", ViewBag.HangGPLX as SelectList, "--- Select ---", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.MaHang, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-6 gx-3 mb-3">
                                        <label class="small mb-1">@Html.DisplayNameFor(model => model.NgayCapGPLX)</label>
                                        @Html.EditorFor(model => model.NgayCapGPLX, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.NgayCapGPLX, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 gx-3 mb-3">
                                        <label class="small mb-1">@Html.DisplayNameFor(model => model.NgayHetHanGPLX)</label>
                                        @Html.EditorFor(model => model.NgayHetHanGPLX, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.NgayHetHanGPLX, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-6 gx-3 mb-3">
                                        <label class="small mb-1">@Html.DisplayNameFor(model => model.MaTT)</label>
                                        @Html.DropDownList("TenTT", ViewBag.TenTTSH as SelectList, "--- Select ---", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.MaTT, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="row mb-2">
                                    <div class="col-md-6 gx-3 mb-3">
                                        <label class="small mb-1">@Html.DisplayNameFor(model => model.DiemLT)</label>
                                        @Html.EditorFor(model => model.DiemLT, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.DiemLT, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="col-md-6 gx-3 mb-3">
                                        <label class="small mb-1">@Html.DisplayNameFor(model => model.DiemTH)</label>
                                        @Html.EditorFor(model => model.DiemTH, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.DiemTH, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 gx-3">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Save" class="btn btn-primary" />
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<div>
    @Html.ActionLink("Back to List", "DanhSachHoSo")
</div>
