@model QuanLyGPLX_LapTrinhWeb.Models.HoSo

<div>
    <div class="container-xl px-4 mt-4">
        <div class="row">

            <div class="col-xl-4">
                <!-- Profile picture card-->
                <div class="card mb-4 mb-xl-0">
                    <div class="card-header">Hình ảnh hồ sơ</div>
                    <div class="card-body text-center">
                        <!-- Profile picture image-->
                        <img class="img-account-profile mb-2" src="@Model.HinhAnh" alt="Hình" style="width: 70%;">
                    </div>
                </div>
            </div>

            <div class="col-xl-8">
                <!-- Account details card-->
                <div class="card mb-4">
                    <div class="card-header">Chi tiết thông tin</div>
                    <div class="card-body">
                        <form>
                            <div class="row">
                                <div class="col-md-6 gx-3 mb-3">
                                    <label class="small mb-1">@Html.DisplayNameFor(model => model.MaGPLX)</label>
                                    <label class="form-control">@Html.DisplayFor(model => model.MaGPLX)</label>
                                </div>
                                <div class="col-md-6 gx-3 mb-3">
                                    <label class="small mb-1" for="inputFirstName">@Html.DisplayNameFor(model => model.HangGPLX)</label>
                                    <label class="form-control">@Html.DisplayFor(model => model.HangGPLX)</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 gx-3 mb-3">
                                    <label class="small mb-1">@Html.DisplayNameFor(model => model.HoTen)</label>
                                    <label class="form-control">@Html.DisplayFor(model => model.HoTen)</label>
                                </div>
                                <div class="col-md-6 gx-3 mb-3">
                                    <label class="small mb-1">@Html.DisplayNameFor(model => model.NgaySinh)</label>
                                    <label class="form-control">@Html.DisplayFor(model => model.NgaySinh)</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 gx-3 mb-3">
                                    <label class="small mb-1">@Html.DisplayNameFor(model => model.GioiTinh)</label>
                                    <label class="form-control">@Html.DisplayFor(model => model.GioiTinh)</label>
                                </div>
                                <div class="col-md-6 gx-3 mb-3">
                                    <label class="small mb-1">@Html.DisplayNameFor(model => model.SDT)</label>
                                    <label class="form-control">@Html.DisplayFor(model => model.SDT)</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 gx-3 mb-3">
                                    <label class="small mb-1">@Html.DisplayNameFor(model => model.DanToc)</label>
                                    <label class="form-control">@Html.DisplayFor(model => model.DanToc)</label>
                                </div>
                                <div class="col-md-6 gx-3 mb-3">
                                    <label class="small mb-1">@Html.DisplayNameFor(model => model.DiaChi)</label>
                                    <label class="form-control">@Html.DisplayFor(model => model.DiaChi)</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 gx-3 mb-3">
                                    <label class="small mb-1">@Html.DisplayNameFor(model => model.QuocTich)</label>
                                    <label class="form-control">@Html.DisplayFor(model => model.QuocTich)</label>
                                </div>
                                <div class="col-md-6 gx-3 mb-3">
                                    <label class="small mb-1">@Html.DisplayNameFor(model => model.TTSH)</label>
                                    <label class="form-control">@Html.DisplayFor(model => model.TTSH)</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 gx-3 mb-3">
                                    <label class="small mb-1">@Html.DisplayNameFor(model => model.NgayCap)</label>
                                    <label class="form-control">@Html.DisplayFor(model => model.NgayCap)</label>
