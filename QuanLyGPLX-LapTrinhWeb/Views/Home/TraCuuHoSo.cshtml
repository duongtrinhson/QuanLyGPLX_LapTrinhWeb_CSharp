                                    <label class="form-control">@Html.DisplayFor(model => model.NgayHetHan)</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 gx-3 mb-3">
                                    <label class="small mb-1">@Html.DisplayNameFor(model => model.DiemLT)</label>
                                    <label class="form-control">@Html.DisplayFor(model => model.DiemLT)</label>
                                </div>
                                <div class="col-md-6 gx-3 mb-3">
                                    <label class="small mb-1">@Html.DisplayNameFor(model => model.DiemTH)</label>
                                    <label class="form-control">@Html.DisplayFor(model => model.DiemTH)</label>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
