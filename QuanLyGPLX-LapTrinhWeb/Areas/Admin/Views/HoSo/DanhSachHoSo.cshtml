@model PagedList.IPagedList<QuanLyGPLX_LapTrinhWeb.Models.HoSo>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Danh sách hồ sơ giấy phép lái xe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section danhsach{
    <script>
        $(document).ready(function () {
            function Contains(text_one, text_two) {
                if (text_one.indexOf(text_two) != -1)
                    return true;
            }
            $("#search").keyup(function () {
                var searchText = $("#search").val().toLowerCase();
                $(".search").each(function () {
                    if (!Contains($(this).text().toLowerCase(), searchText))
                        $(this).hide();
                    else
                        $(this).show();
                });
            })
        });
    </script>

    <script>
        function DeleteHoSo(id) {
            $("#myModal").modal('show');
            $("#btnDelete").click(function () {
                $.ajax({
                    type: "POST",
                    url: "/HoSo/DeleteHoSo",
                    data: { Id: id },
                    success: function (result) {
                        $("#myModal").modal("hide");
                        $("#row_" + id).remove();
                    }
                })
            });
        }
    </script>
}

@if (Session["username"] == null)
{
    Response.Redirect("/Home/Login");
}

@using (Html.BeginForm("DanhSachHoSo", "HoSo", FormMethod.Get, new { @class = "form-inline" }))
{
    <div class="row">
        <h2 style="text-align:center; margin-bottom: 10px">Danh Sách Hồ Sơ</h2>
        <div class="col" style="padding: 0px">
            <input type="text" class="form-control form-input" name="search" id="search" placeholder="Tìm kiếm" style="margin: 10px 0px; cursor:auto">
        </div>
    </div>
}

<div class="row">
    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table table-striped">
        <thead>
            <tr style="white-space:nowrap; text-align:center">
                <th>
                    Mã GPLX
                </th>
                <th>
                    Họ và tên
                </th>
                <th>
                    Ngày sinh
                </th>
                <th>
                    Giới tính
                </th>
                <th>
                    Địa chỉ
                </th>
                <th>
                    Ngày cấp
                </th>
                <th>
                    Ngày hết hạn
                </th>
                <th>
                    Hạng GPLX
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr id="row_@item.MaGPLX" class="search" style="font-size:14px">
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.MaGPLX)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.HoTen)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.NgaySinh)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.GioiTinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChi)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.NgayCap)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.NgayHetHan)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.HangGPLX)
                </td>
                <td class="text-nowrap">
                    <a class="btn btn-outline-dark" href="@Url.Action("Details", "HoSo", new { id = item.MaGPLX.Trim() })"><i class="fa-sharp fa-solid fa-info"></i></a>
                    <a class="btn btn-outline-primary" href="@Url.Action("Edit", "HoSo", new { id = item.MaGPLX.Trim() })"><i class="fa-sharp fa-solid fa-edit"></i></a>
                    <a class="btn btn-outline-danger" onclick="DeleteHoSo('@item.MaGPLX.Trim()');"><i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
        }
    </table>

    <div class="modal fade" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Xóa hồ sơ</h3>
                </div>
                <div class="modal-body">
                    <h4>Bạn có chắc chắn muốn xóa hồ sơ này?</h4>
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                    <a href="" id="btnDelete" class="btn btn-success">Confirm</a>
                </div>
            </div>
        </div>
    </div>

    <div>
        <div>
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
        </div>
        <div class="d-flex justify-content-center">
            <ul class="pagination mt-3 mb-0">
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("DanhSachHoSo", "HoSo", new { page = 1 })">‹‹</a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <a class="page-link" href="#">‹‹</a>
                    </li>
                }
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("DanhSachHoSo", new { page = Model.PageNumber - 1 })">‹</a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <a class="page-link" href="#">‹</a>
                    </li>
                }

                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    if (i == Model.PageNumber)
                    {
                        <li class="page-item active">
                            <a class="page-link" href="@Url.Action("DanhSachHoSo", new { page = i })">@i</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("DanhSachHoSo", new { page = i })">@i</a>
                        </li>
                    }
                }

                @if (Model.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("DanhSachHoSo", new { page = Model.PageNumber + 1 })">›</a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <a class="page-link" href="#">›</a>
                    </li>
                }
                @if (Model.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("DanhSachHoSo", new { page = Model.PageCount })">››</a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <a class="page-link" href="#">››</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>