@model PagedList.IPagedList<QuanLyGPLX_LapTrinhWeb.Models.HoSo>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Danh sách hồ sơ giấy phép lái xe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section search{
    <script>
        $(document).ready(function () {
            function Contains(text_one, text_two) {
                if (text_one.indexOf(text_two) != -1)
                    return true;
            }
            $("#search").keyup(function () {
                var searchText = $("#search").val().toLowerCase();
                $(".search").each(function () {
                    if (!Contains($(this).text().toLowerCase(), searchText))
                        $(this).hide();
                    else
                        $(this).show();
                });
            })
        });
    </script>
}

@if (Session["username"] == null)
{
    Response.Redirect("/Home/Login");
}

<h2>Danh Sách Hồ Sơ</h2>

@using (Html.BeginForm("DanhSachHoSo", "HoSo", FormMethod.Get, new { @class = "form-inline" }))
{
    <div class="row">
        <div class="col">
            <input type="text" class="form-control form-input" name="search" id="search" placeholder="Tìm kiếm theo số giấy phép lái xe...">
        </div>
        @*<div class="col">
                <button type="submit" class="btn btn-primary">Tìm kiếm</button>
            </div>*@
    </div>
}

<div class="row">

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table table-striped">
        <thead>
            <tr style="white-space:nowrap; text-align:center">
                <th>
                    Mã GPLX
                </th>
                <th>
                    Họ và tên
                </th>
                <th>
                    Ngày sinh
                </th>
                <th>
                    Giới tính
                </th>
                <th>
                    Địa chỉ
                </th>
                <th>
                    Ngày cấp
                </th>
                <th>
                    Ngày hết hạn
                </th>
                <th>
                    Hạng GPLX
                </th>
                <th></th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr class="search">
                <td>
                    @Html.DisplayFor(modelItem => item.MaGPLX)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgaySinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GioiTinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayCap)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayHetHan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HangGPLX)
                </td>
                <td class="table-func">
                    @Html.ActionLink("Edit", "Edit", new { id = item.MaGPLX.Trim() }) |
                    @Html.ActionLink("Details", "Details", new { id = item.MaGPLX.Trim() }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MaGPLX.Trim() })
                </td>
            </tr>
        }
    </table>

    <div>
        <div>
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
        </div>
        <div class="d-flex justify-content-center">
            <ul class="pagination mt-3 mb-0">
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("DanhSachHoSo", "HoSo", new { page = 1 })">‹‹</a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <a class="page-link" href="#">‹‹</a>
                    </li>
                }
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("DanhSachHoSo", new { page = Model.PageNumber - 1 })">‹</a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <a class="page-link" href="#">‹</a>
                    </li>
                }

                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    if (i == Model.PageNumber)
                    {
                        <li class="page-item active">
                            <a class="page-link" href="@Url.Action("DanhSachHoSo", new { page = i })">@i</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("DanhSachHoSo", new { page = i })">@i</a>
                        </li>
                    }
                }

                @if (Model.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("DanhSachHoSo", new { page = Model.PageNumber + 1 })">›</a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <a class="page-link" href="#">›</a>
                    </li>
                }
                @if (Model.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("DanhSachHoSo", new { page = Model.PageCount })">››</a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <a class="page-link" href="#">››</a>
                    </li>
                }
            </ul>
        </div>
    </div>
